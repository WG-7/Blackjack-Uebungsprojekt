<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gamblingcoltd.blackjack.Controller" stylesheets="@style.css">
    <top>
        <VBox>
            <Region minHeight="20" />
            <HBox spacing="10">
                <Region minWidth="20" />
                <Label fx:id="LbPlayerName" text="Name"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="BetImage"/>
            <Label fx:id="BetSum" minWidth="50" text="0$"/>
            <Button text="Spielen!"/>
        </HBox>
    </center>
    <bottom>
        <HBox>
            <Region minWidth="20"/>
            <VBox spacing="20">
                <HBox alignment="CENTER_LEFT">
                    <Region minWidth="30" />
                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Guthaben:"/>
                        <Button text="ALL IN"/>
                    </VBox>
                </HBox>
                <HBox spacing="30">
                    <Button fx:id="ChipValue10">
                        <graphic>
                            <ImageView>
                                <Image url="@pokerchip.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="ChipValue25">
                        <graphic>
                            <ImageView>
                                <Image url="@pokerchip.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="ChipValue50">
                        <graphic>
                            <ImageView>
                                <Image url="@pokerchip.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="ChipValue100">
                        <graphic>
                            <ImageView>
                                <Image url="@pokerchip.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="ChipValue500">
                        <graphic>
                            <ImageView>
                                <Image url="@pokerchip.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                <Region minHeight="10"/>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>
